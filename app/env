# This file stores the default environment variables of the application
# DO NOT modify anything here
# The variables can be overridden in the ~/.config/grubify/grubify.conf file

# Application
APP_NAME="Grubify"
APP_NAME_LOWER="grubify"
APP_NAME_UPPER="GRUBIFY"
APP_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/$APP_NAME_LOWER"
APP_CONFIG_FILE="$APP_CONFIG_DIR/$APP_NAME_LOWER.conf"
APP_VERSION="25.10.1"

# App paths
APP_DIR="$ROOT_DIR/app"
APP_UTILS_DIR="$APP_DIR"/utils
APP_TEMPLATES_DIR="$APP_DIR"/templates
APP_TEMPLATES_ICONS_DIR="$APP_TEMPLATES_DIR"/icons
APP_TEMPLATES_SELECT_DIR="$APP_TEMPLATES_DIR"/select

# Temporary directory
TEMP_DIR="/tmp/$APP_NAME_LOWER"

# Log
LOG_TIMESTAMP_INCLUDED="no"

####################################################################
# THEME SETTINGS                                                   #
####################################################################

# Theme colors
THEME_BACKGROUND_COLOR="#313244"    # Reference color for background
THEME_TEXT_COLOR="#cdd6f4"          # Reference color for text
THEME_ACCENT_COLOR="#fab387"        # Reference color for accent (highlight)

# Screen
SCREEN_WIDTH=1920       # Width of screen in pixels
SCREEN_HEIGHT=1080      # Height of screen in pixels

# Background
BACKGROUND_TYPE="file"          # Accepted values: 'file' or 'solid'
BACKGROUND_FILE=""              # Only used if BACKGROUND_TYPE is 'file'
BACKGROUND_COLOR="#000000"      # Only used if BACKGROUND_TYPE is 'solid'

# Container
CONTAINER_WIDTH=40%                         # Width of container in percentage or pixels
CONTAINER_HEIGHT=40%                        # Height of container in percentage or pixels
CONTAINER_LEFT=30%                          # Left position of container in percentage or pixels
CONTAINER_TOP=30%                           # Top position of container in percentage or pixels
CONTAINER_BORDER_RADIUS=50                  # Border radius of container in pixels
CONTAINER_TYPE="blur"                       # Accepted values: 'blur' or 'solid'
CONTAINER_BLUR_SIGMA=30                     # Strength of the blur effect. Only used if CONTAINER_TYPE is 'blur'
CONTAINER_BLUR_BRIGHTNESS=0                 # Brightness of container after blur. Only used if CONTAINER_TYPE is 'blur'
CONTAINER_BLUR_CONTRAST=1                   # Contrast of container after blur. Only used if CONTAINER_TYPE is 'blur'
CONTAINER_COLOR="$THEME_BACKGROUND_COLOR"   # Solid color of container. Only used if CONTAINER_TYPE is 'solid'

# Terminal
TERMINAL_FONT_NAME="Terminus Regular"       # Accepted values: 'Terminus Regular', 'Terminus Bold', or 'Unifont Regular'
TERMINAL_FONT_SIZE=14                       # 12|14|16|18|20|22|24|28|32 for Terminus and 16|18|20|22|24|26|28|30|32 for Unifont

# Menu
MENU_WIDTH=30%      # Width of menu in percentage or pixels
MENU_HEIGHT=30%     # Height of menu in percentage or pixels
MENU_LEFT=35%       # Left position of menu in percentage or pixels
MENU_TOP=35%        # Top position of menu in percentage or pixels

# Menu items
ITEM_FONT_NAME="Unifont Regular"                # Accepted values: 'Terminus Regular', 'Terminus Bold', or 'Unifont Regular'
ITEM_FONT_SIZE=16                               # 12|14|16|18|20|22|24|28|32 for Terminus and 16|18|20|22|24|26|28|30|32 for Unifont
ITEM_COLOR="$THEME_TEXT_COLOR"                  # Text color of items
SELECTED_ITEM_FONT_NAME="Unifont Regular"       # Accepted values: 'Terminus Regular', 'Terminus Bold', or 'Unifont Regular'
SELECTED_ITEM_FONT_SIZE=16                      # 12|14|16|18|20|22|24|28|32 for Terminus and 16|18|20|22|24|26|28|30|32 for Unifont
SELECTED_ITEM_COLOR="$THEME_BACKGROUND_COLOR"   # Text color of selected (focused) item
ITEM_HEIGHT=40      # Height of item in pixels
ITEM_PADDING=0      # Padding of menu item contents in pixels
ITEM_SPACING=10     # Spacing between items in pixels

# Icon
ICON_SIZE=32            # Size of icon in pixels (height and width)
ITEM_ICON_SPACE=15      # Space between icon and title text in pixels

# Countdown
COUNTDOWN_FONT_NAME="Unifont Regular"       # Accepted values: 'Terminus Regular', 'Terminus Bold', or 'Unifont Regular'
COUNTDOWN_FONT_SIZE=16                      # 12|14|16|18|20|22|24|28|32 for Terminus and 16|18|20|22|24|26|28|30|32 for Unifont
COUNTDOWN_TEXT="Auto-boot in %d seconds"    # Content of countdown label
COUNTDOWN_WIDTH=30%                         # Width of countdown label in percentage or pixels
COUNTDOWN_LEFT=35%                          # Left position of countdown label in percentage or pixels
COUNTDOWN_TOP=85%                           # Top position of countdown label in percentage or pixels
COUNTDOWN_ALIGN="center"                    # Alignment of countdown label
COUNTDOWN_COLOR="$THEME_TEXT_COLOR"         # Text color of countdown label

# Progress bar
PROGRESS_BAR_WIDTH=30%          # Width of progress bar in percentage or pixels
PROGRESS_BAR_LEFT=35%           # Left position of progress bar in percentage or pixels
PROGRESS_BAR_TOP=90%            # Top position of progress bar in percentage or pixels
PROGRESS_BAR_HEIGHT=6           # Height of progress bar in pixels
PROGRESS_BAR_ALIGN="center"     # Alignment of progress bar
PROGRESS_BAR_FOREGROUND_COLOR="$THEME_ACCENT_COLOR"         # Foreground color of progress bar
PROGRESS_BAR_BACKGROUND_COLOR="$THEME_BACKGROUND_COLOR"     # Background color of progress bar
PROGRESS_BAR_BORDER_COLOR="$THEME_BACKGROUND_COLOR"         # Border color of progress bar
